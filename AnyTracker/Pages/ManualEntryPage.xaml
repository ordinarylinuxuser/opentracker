<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnyTracker.Pages.ManualEntryPage"
             BackgroundColor="#121212"
             Title="Adjust Time">

    <VerticalStackLayout VerticalOptions="Center" Padding="30" Spacing="25">

        <Label Text="Set Start Time"
               TextColor="White"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Label Text="When did you start this activity?"
               TextColor="Gray"
               FontSize="14"
               HorizontalOptions="Center" />

        <Border Stroke="#333" BackgroundColor="#1E1E1E" StrokeShape="RoundRectangle 8" Padding="20">
            <VerticalStackLayout Spacing="15">
                <Grid ColumnDefinitions="*, Auto">
                    <Label Text="Date" TextColor="White" VerticalOptions="Center" />
                    <DatePicker x:Name="StartDatePicker"
                                Grid.Column="1"
                                TextColor="#2196F3"
                                Format="MMM dd, yyyy" />
                </Grid>

                <BoxView HeightRequest="1" Color="#333" />

                <Grid ColumnDefinitions="*, Auto">
                    <Label Text="Time" TextColor="White" VerticalOptions="Center" />
                    <TimePicker x:Name="StartTimePicker"
                                Grid.Column="1"
                                TextColor="#2196F3"
                                Format="h:mm tt" />
                </Grid>
            </VerticalStackLayout>
        </Border>

        <Grid ColumnDefinitions="*, *" ColumnSpacing="15" Margin="0,20,0,0">
            <Button Text="Cancel"
                    Grid.Column="0"
                    BackgroundColor="#333"
                    TextColor="White"
                    Clicked="OnCancelClicked" />

            <Button Text="Save"
                    Grid.Column="1"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    Clicked="OnSaveClicked" />
        </Grid>

    </VerticalStackLayout>
</ContentPage>