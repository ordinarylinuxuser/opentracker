<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:OpenTracker.ViewModels"
             x:Class="OpenTracker.Pages.TrackerEditorPage"
             BackgroundColor="#121212"
             Title="Edit Tracker">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Label Text="Tracker Details" TextColor="#2196F3" FontAttributes="Bold" />

            <Border Stroke="#333" BackgroundColor="#1E1E1E" Padding="10" StrokeShape="RoundRectangle 8">
                <VerticalStackLayout Spacing="10">
                    <Entry Placeholder="Tracker Name" Text="{Binding TrackerName}" TextColor="White" />

                    <Grid ColumnDefinitions="*, *">
                        <Entry Grid.Column="0" Placeholder="Icon (Emoji)" Text="{Binding Icon}" TextColor="White"
                               MaxLength="2" />
                        <Picker Grid.Column="1" Title="Duration Type" ItemsSource="{Binding DurationTypes}"
                                SelectedItem="{Binding DurationType}" TextColor="White" TitleColor="Gray" />
                    </Grid>

                    <Grid ColumnDefinitions="*, *">
                        <Label Grid.Column="0" Text="Cycle Length" VerticalOptions="Center" TextColor="Gray" />
                        <Entry Grid.Column="1" Placeholder="e.g., 24" Text="{Binding CycleLength}" Keyboard="Numeric"
                               TextColor="White" />
                    </Grid>

                    <Entry Placeholder="Start Button Text" Text="{Binding ButtonStartText}" TextColor="White" />
                    <Entry Placeholder="Stop Button Text" Text="{Binding ButtonStopText}" TextColor="White" />
                </VerticalStackLayout>
            </Border>

            <Grid ColumnDefinitions="*, Auto">
                <Label Text="Stages" TextColor="#2196F3" FontAttributes="Bold" VerticalOptions="Center" />
                <Button Grid.Column="1" Text="+ Add Stage" Command="{Binding AddStageCommand}" HeightRequest="35"
                        FontSize="12" />
            </Grid>

            <CollectionView ItemsSource="{Binding Stages}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,5" Stroke="#333" BackgroundColor="#1E1E1E" Padding="10"
                                StrokeShape="RoundRectangle 8">
                            <Grid ColumnDefinitions="40, *, Auto, Auto" ColumnSpacing="5">

                                <Label Grid.Column="0" Text="{Binding Icon}" FontSize="24" VerticalOptions="Center" />

                                <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                    <Label Text="{Binding Title}" TextColor="White" FontAttributes="Bold" />
                                    <Label Text="{Binding Start, StringFormat='Start: {0}'}" TextColor="#2196F3"
                                           FontSize="10" />
                                </VerticalStackLayout>

                                <Button Grid.Column="2" Text="âœï¸"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TrackerEditorViewModel}}, Path=EditStageCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="Transparent" TextColor="White"
                                        WidthRequest="40" HeightRequest="40" Padding="0" />

                                <Button Grid.Column="3" Text="ðŸ—‘ï¸"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TrackerEditorViewModel}}, Path=DeleteStageCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="Transparent" TextColor="#FF5252"
                                        WidthRequest="40" HeightRequest="40" Padding="0" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Save Tracker" Command="{Binding SaveCommand}" Margin="0,20,0,0" />
            <Button Text="Cancel" Clicked="OnCancelClicked" BackgroundColor="#333" Margin="0,10" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>