<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OpenTracker.Pages.AboutPage"
             BackgroundColor="#121212"
             Title="About">
    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

        <Image Source="appicon.svg" HeightRequest="100" WidthRequest="100" />

        <Label Text="Any Tracker"
               FontSize="32"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center" />

        <Label x:Name="VersionLabel"
               TextColor="Gray"
               HorizontalOptions="Center" />

        <BoxView HeightRequest="1" Color="Gray" Margin="0,10" />

        <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="Auto, *" RowSpacing="10" ColumnSpacing="10">
            <Label Grid.Row="0" Grid.Column="0" Text="Developer:" TextColor="#888" />
            <Label Grid.Row="0" Grid.Column="1" Text="ordinarylinuxuser" TextColor="White" FontAttributes="Bold" />

            <Label Grid.Row="1" Grid.Column="0" Text="License:" TextColor="#888" />
            <Label Grid.Row="1" Grid.Column="1" Text="GPL-3.0" TextColor="White" />
        </Grid>

        <Button Text="View on GitHub"
                Clicked="OpenGithub_Clicked"
                BackgroundColor="#24292e"
                TextColor="White"
                Margin="0,20,0,0" />
        
        <Button Text="Close"
                Clicked="OnCloseClicked"
                BackgroundColor="#333"
                TextColor="White"
                Margin="0,10,0,0" />    
    </VerticalStackLayout>
</ContentPage>